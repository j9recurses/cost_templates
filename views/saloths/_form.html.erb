     <% if @saloth.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @saloth.errors.each do |field, msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= simple_form_for @saloth do |f| %>
  <% unless params[:all] %>

    <%= f.hidden_field :current_step, value: @saloth.current_step %>
    <%=f.input :election_year_id ,  as: :hidden, :input_html => { :value => session[:election_year]} %>
    <%=f.input :county ,  as: :hidden, :input_html => { :value => session[:county]} %>

    <%= render "saloths/steps/page#{@saloth.current_step + 1}", f: f %>


  <div class="form-actions">
      <%= f.submit "Back", name: "back_button" unless @saloth.first_step? %>
      <%= f.submit  "Save and Exit", name: "save_and_exit" unless @saloth.last_step? %>
      <% @last = "Submit " +    @category_name + " Costs for " + @election_year[:year].to_s %>
      <% if @saloth.last_step? %>
      <%=  f.submit @last %>
      <% else %>
      <%= f.submit "Next" %>
      <%end %>
    </div>

  <% else %>

    <%# all the fields on one page... %>
    <%= hidden_field_tag :all, 1 %>
    <% Saloths.total_steps.times do |step| %>
      <%= render "saloths/steps/page#{step + 1}", f: f %>
    <% end %>
    <%= f.submit %>

  <% end %>

<% end %>
.
